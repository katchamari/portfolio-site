{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "dotenv -c -- next dev",
    "build": "dotenv -c -- next build",
    "start": "dotenv -c -- next start",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "check": "npm run lint && npm run type-check && npm run format:check",
    "clean": "rm -rf .next && rm -rf out && rm -rf node_modules/.cache",
    "analyze": "ANALYZE=true npm run build",
    "prepare": "husky .husky"
  },
  "dependencies": {
    "dotenv-cli": "^11.0.0",
    "motion": "^12.23.26",
    "next": "16.0.10",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-hot-toast": "^2.6.0",
    "react-syntax-highlighter": "^16.1.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run lint",
      "prettier --write",
      "bash -c 'npx tsc --noEmit'"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
